# Application Settings
APP_NAME=AI Agent Orchestrator
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (comma-separated list of allowed origins)
CORS_ORIGINS=https://yourdomain.com,https://www.yourdomain.com,http://localhost:3000,http://localhost:8000

# Security Settings
# Generate a strong API key: python -c "import secrets; print(secrets.token_urlsafe(32))"
API_KEY=your-secret-api-key-here
REQUIRE_API_KEY=true
RATE_LIMIT_PER_MINUTE=60
# Restrict file tools (read/list/search) to this directory. Empty = process cwd. Set in production.
# AGENT_WORKSPACE_ROOT=/var/lib/orchestrator/workspace
# Redact common prompt-injection phrases in user goal before sending to LLM (best-effort). Set false to disable.
PROMPT_INJECTION_FILTER_ENABLED=true
# Planner: timeout per LLM call in seconds (0 = no timeout).
PLANNER_LLM_TIMEOUT_SECONDS=120

# LLM Provider Settings
LLM_PROVIDER=bedrock
LLM_MODEL=anthropic.claude-3-haiku-20240307-v1:0
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=4096

# AWS Bedrock Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key

# OpenAI Configuration (if using OpenAI instead)
# OPENAI_API_KEY=your-openai-api-key
# OPENAI_MODEL=gpt-3.5-turbo

# Ollama Configuration (if using Ollama instead)
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama2

# Server Settings
HOST=0.0.0.0
PORT=8000

