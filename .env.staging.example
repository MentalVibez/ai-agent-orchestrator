# =============================================================================
# Staging environment configuration
# Copy to .env.staging and fill in real values before deploying.
# NEVER commit .env.staging — it is gitignored.
# =============================================================================

# Application
APP_NAME="AI Agent Orchestrator (Staging)"
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=DEBUG
LOG_FORMAT=json

# Security — use different keys from production
API_KEY=staging-api-key-change-me
REQUIRE_API_KEY=true
METRICS_TOKEN=staging-metrics-token-change-me
WEBHOOK_SECRET=staging-webhook-secret-change-me
WEBHOOK_REQUIRE_AUTH=true

# CORS — allow internal staging tools
CORS_ORIGINS=http://localhost:3000,https://staging.yourdomain.com

# Database
STAGING_POSTGRES_PASSWORD=staging-db-password-change-me

# LLM Provider — can point to cheaper models in staging
LLM_PROVIDER=bedrock
LLM_MODEL=anthropic.claude-3-haiku-20240307-v1:0
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=

# Rate limiting — more permissive in staging for testing
RATE_LIMIT_PER_MINUTE=120

# Circuit breaker — lower thresholds for faster feedback in staging
CIRCUIT_BREAKER_FAIL_MAX=3
CIRCUIT_BREAKER_RESET_TIMEOUT=30

# Graceful shutdown
GRACEFUL_SHUTDOWN_TIMEOUT_SECONDS=15

# OpenTelemetry (optional in staging)
OTEL_ENABLED=false
